{
  "name": "ikadips-guard-api",
  "author": {
    "name": "Ikattan - Lilian BAUDRY",
    "email": "lilian.baudry21@gmail.com"
  },
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "watch": "bun run --watch src/index.ts",
    "dev": "bun run src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint ./src/**/*.ts",
    "test": "bun test --coverage",
    "test:watch": "bun test --coverage --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "elysia": "^0.8.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
